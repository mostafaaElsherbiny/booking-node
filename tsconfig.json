{
	"compilerOptions": {
		"paths": {
			"@root/*": ["./*"],
			"@modules/*": ["./src/app/*"],
			"@utils/*": ["./src/app/utils/*"],
		},
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"target": "es2016",
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		// "allowJs": true
	}
}
